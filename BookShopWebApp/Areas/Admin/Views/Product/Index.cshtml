
@{
    ViewData["Title"] = "Products";
}
<partial name="_Notifications"/>
<div class="container">
    <div class="row pt-3">
        <div class="col-md-6">
            <h3 class="text-primary">Products List</h3>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary" > <i class="bi bi-plus-circle"></i> &nbsp; Create New Product</a>
        </div>
    </div>
    <br />
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th class="text-center"><i class="bi bi-gear"></i></th>
        </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>