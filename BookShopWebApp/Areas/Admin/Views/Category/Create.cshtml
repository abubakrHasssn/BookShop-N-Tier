@model Category
@{
    ViewData["Title"] = "Create";
}


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary">@(Model == null ? "Create Category" : "Update Category" )</h3>
            <hr />
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="DisplyOrder"></label>
            <input type="text" asp-for="DisplyOrder" class="form-control" />
            <span asp-validation-for="DisplyOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-2" style="width:150px;">Save</button>
        <a asp-controller="Category" asp-action="index" class="btn btn-secondary mt-2" style="width:150px;">Back To List</a>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}