@model Company
@{
    ViewData["Title"] = "Companies";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="border p-3 mt-4 row">
        <div class="row pb-2">
            <h3 class="text-primary">@(Model.Id != 0 ? "Update" : "Create") Company</h3>
            <hr/>
            <div class="col-12">
                <div class="row">
                    <div class="mb-3">
                        <label asp-for="Name"></label>
                        <input type="text" asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-6">
                        <label asp-for="StreetAddress"></label>
                        <input type="text" asp-for="StreetAddress" class="form-control"/>
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-6">
                        <label asp-for="City"></label>
                        <input type="text" asp-for="City" class="form-control"/>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-6">
                        <label asp-for="State"></label>
                        <input type="text" asp-for="State" class="form-control"/>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-6">
                        <label asp-for="PostalCode"></label>
                        <input type="text" asp-for="PostalCode" class="form-control"/>
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber"></label>
                        <input type="text" asp-for="PhoneNumber" class="form-control"/>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    @if (Model.Id == 0)
                    {
                        <button type="submit" class="btn btn-primary mt-2" style="width: 150px;">Create</button>
                    }
                    else
                    {
                        <input asp-for="Id" hidden/>
                        <button type="submit" class="btn btn-primary mt-2" style="width: 150px;">Update</button>
                    }
                    <a asp-controller="Company" asp-action="index" class="mx-2 btn btn-secondary mt-2" style="width: 200px;">Back To List</a>
                </div>
            </div>
        </div>

    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}