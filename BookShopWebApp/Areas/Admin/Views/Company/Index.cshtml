
@{
    ViewData["Title"] = "Companies";
}
<partial name="_Notifications"/>
<div class="container">
    <div class="row pt-3">
        <div class="col-md-6">
            <h3 class="text-primary">Companies List</h3>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary" > <i class="bi bi-plus-circle"></i> &nbsp; Create New Company</a>
        </div>
    </div>
    <br />
    <table id="tblData" class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Street Address</th>
            <th>City</th>
            <th>State</th>
            <th>Phone Number</th>
            <th class="text-center"><i class="bi bi-gear"></i></th>
        </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
@section Scripts
{
    <script src="~/js/Company.js"></script>
}
